<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Non focused states
     -->
    <item android:drawable="@drawable/button_rounded_unpressed" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/button_rounded_unpressed" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />
    <!--  Focused states
     -->
    <item android:drawable="@drawable/button_rounded_unpressed" android:state_focused="true" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/button_rounded_unpressed" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />
    <!--  Pressed
     -->
    <item android:drawable="@drawable/button_rounded_press" android:state_pressed="true" />

    <item android:bottom="6dp" android:drawable="@drawable/transparent_bg_bordered_button" android:top="6dp" />
</selector>